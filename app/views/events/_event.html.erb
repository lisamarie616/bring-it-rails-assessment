<div class="col-sm-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= event.title %></h4>
    </div>
    <div class="panel-body">
      <p><strong>Location:</strong> <%= event.location %></p>
      <p><strong>Start Time:</strong> <%= date_helper(event.start_time) %></p>
      <p><strong>End Time:</strong> <%= date_helper(event.end_time) %></p>
      <ul class="list-inline">
        <li><%= link_to "Details", event_path(event), class: "btn btn-sm btn-default" %></li>
        <li><%= link_to "Edit", edit_event_path(event), class: "btn btn-sm btn-default" %></li>
        <li><%= link_to "Delete", event_path(event), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-default" %></li>
      </ul>
    </div>
  </div>
</div>