<div class="col-lg-12">
  <div class="row">
    <div class="col-md-8">
      <%= form_for @event do |f| %>
        <div class="control-group form-group">
          <div class="controls">
            <%= f.label "Event Title" %>
            <%= f.text_field :title, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="control-group form-group">
          <div class="controls">
            <%= f.label :location %>
            <%= f.text_field :location, class: "form-control" %>
          </div>
        </div>

         <div class="control-group form-group">
          <div class="controls">
            <%= f.label :start_time %>
            <div class="help-block">ex: "8/6/1991 at 1:30pm" OR "next Saturday at noon"</div>
            <%= f.text_field :start_time, class: "form-control" %>
          </div>
        </div>

         <div class="control-group form-group">
          <div class="controls">
            <%= f.label :end_time %>
            <%= f.text_field :end_time, class: "form-control" %>
          </div>
        </div>
        
        <div class="control-group form-group">
          <div class="controls">
            <%= f.fields_for :guests, [User.new] do |guest_form| %>
              <%= guest_form.label "Emails:" %>
              <div class="help-block">Enter guest email addresses separated by commas</div>
              <%= guest_form.text_area :email, class: "form-control", style: "resize:none", rows: "7", cols: "100" %>
            <% end %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>